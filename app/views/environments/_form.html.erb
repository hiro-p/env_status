<%= simple_form_for @environment, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Environment</legend>
    <%= f.input :name %>
    <%= f.input :usage, :collection => Environment.usages  %>
    <%= f.input :comment %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                environments_path, :class => 'btn' %>
  </div>
<% end %>
